{
  "$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": { "noMultipleSpacesInRegularExpressionLiterals": "off" },
      "style": {
        "useTemplate": "off",
        "noNonNullAssertion": "off",
        "noUnusedTemplateLiteral": "off",
        "noUselessElse": "off",
        "useNamingConvention": "off"
      },
      "suspicious": { "noExplicitAny": "off", "noImplicitAnyLet": "off" }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "enabled": true
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "enabled": true
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  }
}
